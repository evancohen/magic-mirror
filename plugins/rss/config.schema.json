{
    "schema": {
        "rss": {
            "type": "object",
            "title": "{{title}}",
            "properties": {
                "feeds": {
                    "type": "tabarray",
                    "title": "{{feed url}}",
                    "items": {
                        "type": "url"
                    }
                },
                "refreshInterval": {
                    "type": "integer",
                    "title": "{{refresh cycle}}",
                    "default": 9
                }
            }
        }
    },
    "form": [
        {
            "type": "fieldset",
            "key": "rss",
            "expandable": true,
            "order":0
        }
    ]
}