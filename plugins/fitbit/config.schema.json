{
  "schema": {
    "fitbit": {
      "type": "object",
      "title": "{{title}}",
      "properties": {
        "timeout": {
          "type": "number",
          "title": "{{cycle info time}}",
          "default":10000
        },
        "creds": {
          "type": "object",
          "properties": {
            "clientID": {
              "default": "",
              "type": "string",
              "title": "{{oauth client id}}"
            },
            "clientSecret": {
              "default": "",
              "type": "string",
              "title": "{{Client Secret}}"
            }
          }
        },
        "uris": {
          "type": "object",
          "properties": {
            "authorizationUri": {
              "default": "https://www.fitbit.com",
              "type": "string",
              "title": "{{auth uri}}"
            },
            "authorizationPath": {
              "default": "/oauth2/authorize",
              "type": "string",
              "title": "{{auth path}}"
            },
            "tokenUri": {
              "default": "https://api.fitbit.com",
              "type": "string",
              "title": "{{Token URI}}"
            },
            "tokenPath": {
              "default": "/oauth2/token",
              "type": "string",
              "title": "{{Token Path}}"
            }
          }
        },
        "authorization_uri": {
          "type": "object",
          "properties": {
            "redirect_uri": {
              "default": "http://localhost:4000/fitbit_auth_callback/",
              "type": "string",
              "title": "{{Redirect URI}}"
            },
            "response_type": {
              "default": "code",
              "type": "string",
              "title": "{{Response Type}}"
            },
            "scope": {
              "default": "activity nutrition profile settings sleep social weight heartrate",
              "type": "string",
              "title": "{{Scope}}"
            },
            "state": {
              "default": "3(#0/!~",
              "type": "string",
              "title": "{{State}}"
            }
          }
        }
      }
    }
  },
  "form":[
    {
      "type":"fieldset",
      "title":"{{title}}",
      "expandable":true,
      "order":0,
      "items": [
        "fitbit.timeout",
        "fitbit.creds",
        "fitbit.uris",
        "fitbit.authorization_uri"
      ]
    }
  ],
  "value":{
    "fitbit":{
      "timeout": 10000,
      "uris": {
        "authorizationUri": "https://www.fitbit.com",
        "authorizationPath": "/oauth2/authorize",
        "tokenUri": "https://api.fitbit.com",
        "tokenPath": "/oauth2/token"
      },
      "authorization_uri": {
        "redirect_uri": "http://localhost:4000/fitbit_auth_callback/",
        "response_type": "code",
        "scope": "activity nutrition profile settings sleep social weight heartrate",
        "state": "3(#0/!~"
        }
    }
  }
}
